{
  "name": "intern-webgl-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@commitlint/cli": "^8.3.5",
    "@jam3/detect": "^1.0.2",
    "@jam3/stats": "^1.0.1",
    "dat.gui": "^0.7.6",
    "detect-gpu": "^1.2.0",
    "eventemitter3": "^4.0.0",
    "flow-bin": "^0.118.0",
    "gsap": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "query-string": "^6.11.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "three": "^0.107.0"
  },
  "devDependencies": {
    "audit-ci": "^2.5.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-jam3": "^1.1.0",
    "eslint-plugin-jam3": "^0.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "audit": "audit-ci --high",
    "js-lint": "eslint './src/**/*.js' -c ./.eslintrc.json --quiet --ignore-pattern .gitignore",
    "flow": "flow",
    "linters": "npm-run-all flow js-lint"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,json,scss}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Pre-commit checks...' && npm run linters && lint-staged",
      "pre-push": "echo 'Pre-push checks...' && npm run linters && npm run audit",
      "commitmsg": "commitlint -e $GIT_PARAMS"
    }
  }
}
